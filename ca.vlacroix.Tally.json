{
	"app-id": "ca.vlacroix.Tally",
	"runtime": "org.gnome.Platform",
	"runtime-version": "49",
	"sdk": "org.gnome.Sdk",
	"command": "tally",
	"finish-args": [
		"--device=dri",
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland"
	],
	"modules": [
		"shared-modules/lua5.4/lua-5.4.json",
		{
			"name": "LuaGObject",
			"no-autogen": true,
			"subdir": "LuaGObject",
			"make-args": ["LUA_VERSION=5.4"],
			"make-install-args": ["LUA_VERSION=5.4", "PREFIX=/app"],
			"sources": [{
				"type": "git",
				"url": "https://github.com/vtrlx/LuaGObject",
				"tag": "0.10.2"
			}]
		},
		{
			"name": "tally",
			"no-autogen": true,
			"sources": [{
				"type": "git",
				"url": "https://github.com/vtrlx/tally",
				"tag": "0.7.2"
			}]
		}
	]
}
