			}]
		},
		{
			"name": "tally",
			"no-autogen": true,
			"sources": [{
				"type": "git",
				"url": "https://github.com/vtrlx/tally",
				"tag": "0.6.1",
				"commit": "e40bf57686b139e348200f4b3c4337c4b790e479"
			}]
		}
	]
